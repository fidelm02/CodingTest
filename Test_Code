class Person(object):

    def __init__(self, initial_age):
        if initial_age < 0 or isinstance(initial_age,str) or isinstance(initial_age,float):
            raise ValueError("Age must be an integer equal or greater than 0")
        self.initial_age = initial_age


    def what_am_i(self):
        age=self.initial_age
        if age>=0 and age < 13:
            print("You are young...")
        elif age>=13 and age<18:
            print("You are a teenager...")
        elif age>=18:
            print("You are an adult...")


    def year_passes(self):
        age=self.initial_age
        age+=1
        return age
